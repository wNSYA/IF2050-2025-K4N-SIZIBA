<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="586.0" prefWidth="400.0" spacing="7.0" style="-fx-background-color: #f5f9ff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.if20502025k4nsiziba.controller.AddChildFormController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="25.0" />
    </padding>

    <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Add Child" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Child Name:" />
    <TextField fx:id="txtChildName" promptText="Enter child's name" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Date of Birth:" />
    <DatePicker fx:id="datePickerDOB" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Gender:" />
    <ChoiceBox fx:id="choiceGender" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <!-- <String fx:value="Male" /> -->
                <!-- <String fx:value="Female" /> -->
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Height (cm):" />
    <TextField fx:id="txtHeight" promptText="Enter height" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Weight (kg):" />
    <TextField fx:id="txtWeight" promptText="Enter weight" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Lingkar Kepala (cm):" />
    <TextField fx:id="txtHeadCirc" promptText="Enter lingkar kepala" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Lingkar Perut (cm):" />
    <TextField fx:id="txtAbdCirc" promptText="Enter lingkar perut" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Lingkar Tangan (cm):" />
    <TextField fx:id="txtHandCirc" promptText="Enter lingkar tangan" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-pref-height: 35;" />

    <Button fx:id="btnSave" onAction="#handleSubmit" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 120; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;" text="Save" />
<!--            onMouseEntered="-fx-background-color: #2980b9;"-->
<!--            onMouseExited="-fx-background-color: #3498db;"-->
</VBox>
