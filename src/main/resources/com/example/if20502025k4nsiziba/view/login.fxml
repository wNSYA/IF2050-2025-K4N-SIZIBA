<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="500" prefWidth="400" style="-fx-background: linear-gradient(to bottom, #A4E5FF, #F4F4F4);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.if20502025k4nsiziba.controller.LoginController">

    <!-- Main Container Card -->
    <VBox alignment="CENTER" maxHeight="400" maxWidth="320" prefHeight="337.0" prefWidth="320.0" spacing="20" style="-fx-background-color: white-fx-background-radius: 15-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 5);">
        <padding>
            <Insets bottom="40" left="30" right="30" top="40" />
        </padding>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="5">

            <Label style="-fx-font-size: 24px;-fx-font-weight: bold;-fx-text-fill: #2c3e50;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Welcome Back" />

            <Label style="-fx-font-size: 14px;-fx-text-fill: #7f8c8d;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Sign in to your account" />
        </VBox>

        <!-- Form Fields -->
        <VBox prefWidth="260" spacing="15">
            <!-- Username Field Container -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 12px;-fx-font-weight: bold;-fx-text-fill: #2c3e50;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Username" />
                <TextField fx:id="usernameField" prefHeight="40" promptText="Enter your username" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 15 0 15; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Password Field Container -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 12px;-fx-font-weight: bold;-fx-text-fill: #2c3e50;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Password" />
                <PasswordField fx:id="passwordField" prefHeight="40" promptText="Enter your password" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 15 0 15; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>
        </VBox>

        <!-- Button Section -->
        <VBox prefWidth="260" spacing="12">
            <!-- Primary Login Button -->
            <Button maxWidth="Infinity" onAction="#handleLogin" prefHeight="45" style="-fx-background-color: #007aff; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.3), 8, 0, 0, 2);" text="Sign In" />

            <!-- Secondary Register Button -->
            <Button maxWidth="Infinity" onAction="#toRegister" prefHeight="40" style="-fx-background-color: transparent;-fx-background-radius: 8;-fx-border-color: linear-gradient(45deg, #667eea 0%, #ff6b9d 100;-fx-border-radius: 8;-fx-border-width: 2;-fx-text-fill: #667eea;-fx-font-size: 14px;-fx-font-weight: bold;-fx-font-family: 'Segoe UI', Arial, sans-serif;                            -fx-cursor: hand;" text="Create New Account">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
        </VBox>
    </VBox>
</StackPane>
