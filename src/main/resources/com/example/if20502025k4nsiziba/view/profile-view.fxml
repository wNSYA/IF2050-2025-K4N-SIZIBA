<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="397.0" prefWidth="403.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.if20502025k4nsiziba.controller.ProfileController">

    <VBox layoutX="150" layoutY="60" spacing="12">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="User Profile" />

        <HBox spacing="10">
            <Label minWidth="100" text="Name:" />
            <Label fx:id="nameLabel" />
        </HBox>

        <HBox spacing="10">
            <Label minWidth="100" text="Username:" />
            <Label fx:id="usernameLabel" />
        </HBox>

        <HBox spacing="10">
            <Label minWidth="100" text="Password:" />
            <Label fx:id="passwordLabel" />
        </HBox>

        <Button onAction="#handleEditProfile" text="Edit Profile" />
    </VBox>
</AnchorPane>
