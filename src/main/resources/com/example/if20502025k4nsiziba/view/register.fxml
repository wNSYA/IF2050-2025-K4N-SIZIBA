<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600" prefWidth="400" style="-fx-background: linear-gradient(to bottom, #A4E5FF, #F4F4F4);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.if20502025k4nsiziba.controller.RegisterController">

    <!-- Main Container Card -->
    <VBox alignment="CENTER" maxHeight="520" maxWidth="320" prefHeight="520.0" prefWidth="320.0" spacing="20" style="-fx-background-color: white;                  -fx-background-radius: 15;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 5);">
        <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
        </padding>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="5">

            <Label style="-fx-font-size: 24px;                           -fx-font-weight: bold;                           -fx-text-fill: #2c3e50;                           -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Create Account" />

            <Label style="-fx-font-size: 14px;                           -fx-text-fill: #7f8c8d;                           -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Join us today" />
        </VBox>

        <!-- Form Fields -->
        <VBox prefWidth="260" spacing="12">
            <!-- Name Field Container -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 12px;                               -fx-font-weight: bold;                               -fx-text-fill: #2c3e50;                               -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Full Name" />
                <TextField fx:id="nameField" prefHeight="38" promptText="Enter your full name" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 15 0 15; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Username Field Container -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 12px;                               -fx-font-weight: bold;                               -fx-text-fill: #2c3e50;                               -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Username" />
                <TextField fx:id="usernameField" prefHeight="38" promptText="Choose a username" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 15 0 15; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Password Field Container -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 12px;                               -fx-font-weight: bold;                               -fx-text-fill: #2c3e50;                               -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Password" />
                <PasswordField fx:id="passwordField" prefHeight="38" promptText="Create a password" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 15 0 15; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Confirm Password Field Container -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 12px;                               -fx-font-weight: bold;                               -fx-text-fill: #2c3e50;                               -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Confirm Password" />
                <PasswordField fx:id="confirmPasswordField" prefHeight="38" promptText="Confirm your password" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 15 0 15; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>
        </VBox>

        <!-- Button Section -->
        <VBox prefWidth="260" spacing="12">
            <!-- Primary Register Button -->
            <Button maxWidth="Infinity" onAction="#handleRegister" prefHeight="45" style="-fx-background-color: #007aff; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(255,107,157,0.3), 8, 0, 0, 2);" text="Create Account" />

            <!-- Secondary Login Button -->
            <Button maxWidth="Infinity" onAction="#toLogin" prefHeight="40" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-cursor: hand;" text="Already have an account? Sign In" />
        </VBox>
    </VBox>
</StackPane>
