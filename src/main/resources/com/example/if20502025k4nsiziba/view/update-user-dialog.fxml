<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="381.0" prefWidth="380" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.if20502025k4nsiziba.controller.UpdateUserDialogController">

    <!-- Main Dialog Card -->
    <VBox alignment="CENTER" maxHeight="409.0" maxWidth="340" prefHeight="409.0" prefWidth="340.0" spacing="18" style="-fx-background-color: white;">
        <padding>
            <Insets bottom="25" left="30" right="30" top="25" />
        </padding>
   
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="6">
   
            <Label style="-fx-font-size: 20px;-fx-font-weight: bold;-fx-text-fill: #2c3e50;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Update Profile" />
   
            <Label style="-fx-font-size: 12px;-fx-text-fill: #7f8c8d;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Edit your account information" />
        </VBox>

        <!-- Form Fields -->
        <VBox prefHeight="237.0" prefWidth="280" spacing="12">
            <!-- Name Field -->
            <VBox spacing="4">
                <Label style="-fx-font-size: 11px;-fx-font-weight: bold;-fx-text-fill: #007aff;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="FULL NAME" />
                <TextField fx:id="nameField" prefHeight="35.0" prefWidth="280.0" promptText="Enter your full name" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 12 0 12; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Username Field -->
            <VBox spacing="4">
                <Label style="-fx-font-size: 11px;-fx-font-weight: bold;-fx-text-fill: #007aff;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="USERNAME" />
                <TextField fx:id="usernameField" prefHeight="35.0" promptText="Choose a username" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 12 0 12; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="4">
                <Label style="-fx-font-size: 11px;-fx-font-weight: bold;-fx-text-fill: #007aff;-fx-font-family: 'Segoe UI', Arial, sans-serif;" text="NEW PASSWORD" />
                <PasswordField fx:id="currentPasswordField" prefHeight="35.0" promptText="Enter current password" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 12 0 12; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="4">
                <Label style="-fx-font-size: 11px;                               -fx-font-weight: bold;                               -fx-text-fill: #007aff;                               -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="CURRENT PASSWORD" />
                <PasswordField fx:id="passwordField" prefHeight="35.0" promptText="Enter new password" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-border-width: 1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #95a5a6; -fx-padding: 0 12 0 12; -fx-font-family: 'Segoe UI', Arial, sans-serif;" />
            </VBox>
        </VBox>

        <!-- Button Section -->
        <HBox alignment="CENTER" prefWidth="280" spacing="12">
            <!-- Cancel Button -->
            <Button maxWidth="Infinity" onAction="#handleCancel" prefHeight="38" style="-fx-background-color: transparent;-fx-background-radius: 8;-fx-border-color: #dc3545;-fx-border-radius: 8;-fx-border-width: 2;-fx-text-fill: #dc3545;-fx-font-size: 14px;-fx-font-weight: bold;-fx-font-family: 'Segoe UI', Arial, sans-serif;-fx-cursor: hand;" text="Cancel" />

            <!-- Update Button -->
            <Button maxWidth="Infinity" onAction="#handleUpdate" prefHeight="38" style="-fx-background-color: #007aff; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-cursor: hand;" text="Update" />
        </HBox>
    </VBox>
</StackPane>
